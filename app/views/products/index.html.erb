<div id="product_list">
  <h1>Listing Products</h1>
  <table>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= image_tag(product.image_url, :class => 'img-responsive') %>
        </td>
        <td class="list_description">
          <dl>
            <dt>
              <%= product.title %>
            </dt>
            <dd>
              <%= truncate(strip_tags(product.description),
            :length => 80) %>
            </dd>
          </dl>
        </td>
        <td class="list_actions">
          <%= product.price %>
        </td>
        <td>
          <%= link_to 'Show', product, class:"btn btn-info" %>
          <br/>
          <%= link_to 'Edit', edit_product_path(product), class: "btn bg-primary text-white" %>
          <br/>
          <%= link_to 'Destroy', product, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
      <% end %>
  </table>
</div>
<br>
<%= link_to 'New Product', new_product_path %>
